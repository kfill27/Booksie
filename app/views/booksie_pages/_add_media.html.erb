<div class="container add-media-section">
  <div class="row">

<!-- Photo Upload  -->
    <div class="col-md-4 col-xs-4 text-center">
      <div class="circle">
        <a href="#" data-toggle="modal" data-target="#myPhotoModal"><i class="fa fa-camera fa-5x"></i></a>
      </div>
      <!-- Modal Upload -->
      <div class="modal fade" id="myPhotoModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">Choose photo to upload:</h4>
            </div>
            <div class="modal-body">
              <div class="photo-form">
                <%= form_for(Photo.new) do |f| %>
                  <%# if @photo.errors.any? %>
                  <!-- <div id="error_explanation"> -->
                  <!-- <h2><%# pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2> -->
                  <%= f.hidden_field :booksie_page_id, value: @booksie_page.id %>
                  <ul class="list-unstyled">
                  <%# @photo.errors.full_messages.each do |message| %>
                  <li><%#= message %></li>
                  <%# end %>
                  </ul>
              </div>

              <div class="upload-button text-center">
                <!-- added date -->
                <%= f.date_field :date %>
                <%= f.file_field :image %>
                <%= f.label :tag_list, "Tags (separated by commas)" %><br />
                <%= f.text_field :tag_list %>
              </div>

              <div class="actions">
                <%= f.submit "Upload Photo", class: "btn btn-default" %>
              </div>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>


<!-- Milestone Upload  -->
    <div class="col-md-4 col-xs-4 text-center">
      <div class="circle">
        <a href="#" data-toggle="modal" data-target="#myTextModal"><i class="fa fa-pencil fa-5x"></i></a>
      </div>
      <!-- Modal Text Upload-->
      <div class="modal fade" id="myTextModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myTextModalLabel">Share Milestone or Memory</h4>
                </div>
                <div class="modal-body">
                <%= form_for(Milestone.new) do |f| %>
                <ul class="list-unstyled">
                  <li><%= f.date_field :date %></li>
                  <li><%= f.label "Enter your milestone..." %></li>
                  <li><%= f.text_field :post, class: "milestone" %></li>
                  <li><%= f.label :tag_list, "Tags (separated by commas)" %><br />
                  <li><%= f.text_field :tag_list %></li>
                  <div>
                  <%= f.submit "Upload Milestone", class: "btn btn-default" %>
                  </div>
                </ul>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
<!-- Video Upload  -->
    <div class="col-md-4 col-xs-4 text-center">
      <div class="circle">
        <a href="#" data-toggle="modal" data-target="#myVideoModal"><i class="fa fa-video-camera fa-5x"></i></a>
      </div>
    <!-- Modal Video Upload-->
    <div class="modal fade" id="myVideoModal" tabindex="-1" role="dialog" aria-labelledby="myVideoModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Upload a Video:</h4>
          </div>
          <div class="modal-body">
            <%= form_for(Video.new) do |f| %>
              <%= f.date_field :date %>
              <%= f.file_field :video %>
              <%= f.label :tag_list, "Tags (separated by commas)" %><br />
              <%= f.text_field :tag_list %>
              <div class="actions">
                <%= f.submit "Upload Video", class: "btn btn-default" %>
              </div>
            <% end %>
          </div>
        </div>
       </div>
      </div>
    </div>
  </div>
</div>
