<hr>
<div class="">
  <div class="container col-md-8">
    <div id="tag_cloud">
      <% tag_cloud Photo.tag_counts, %w[l] do |tag, css_class| %>
      <%= link_to tag.name, tag_path(tag.name), class: css_class %>
      <% end %>
    </div>

    <!-- Photo Gallery -->
      <div class="row">
        <% @photos.each do |photo| %>
         <div class="col-md-3 col-sm-4 col-xs-6">
        <%= link_to photo do %>
          <%= image_tag photo.image_url(:thumb) %>
        <% end %>
        <%= link_to photo, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fa fa-times"></i>
        <% end %>
         </div>
        <% end %>
    </div>

    <hr>

    <!-- Video Gallery -->
      <div class="row">
        <% @videos.each do |video| %>
         <div class="col-md-5 col-sm-4 col-xs-6">
        <%= link_to video do %>
          <%= video_tag(video.video.url(:thumb), controls: true) %>
        <% end %>
        <%= link_to video, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fa fa-times"></i>
        <% end %>
         </div>
        <% end %>
    </div>
  </div>
</div>
