<hr>
<div class="">
  <div class="container col-md-8">
    <ul class ="list-inline list-unstyled">
        <li><h2>All</h2></li>|
        <li><h2>Child 1</h2></li>|
        <li><h2>Child 2</h2></li>
    </ul>
    <!-- Photo Gallery -->
      <div class="row">
        <% @photos.each do |photo| %>
         <div class="col-md-3 col-sm-4 col-xs-6">
        <%= link_to photo do %>
          <%= image_tag photo.image_url(:thumb) %>
        <% end %>
        <%= link_to photo, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fa fa-times"></i>
        <% end %>
         </div>
        <% end %>
    </div>

    <hr>

    <!-- Video Gallery -->
      <div class="row">
        <% @videos.each do |video| %>
         <div class="col-md-5 col-sm-4 col-xs-6">
        <%= link_to video do %>
          <%= video_tag(video.video.url(:thumb), controls: true) %>
        <% end %>
        <%= link_to video, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fa fa-times"></i>
        <% end %>
         </div>
        <% end %>
    </div>
  </div>
</div>
