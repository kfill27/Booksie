<%= render 'layouts/header' %>
<div class="container">
  <h2>Photos</h2>

  <div class="clearfix"></div>
  <div class="row">
    <% @photos.each do |photo| %>
      <div class="tagged-photos col-sm-3">
          <%= image_tag photo.image.url(:thumb) %>
          <p class="text-center"><%= photo.date %></p>
      </div>
    <% end %>
  </div>
  <div class="tagged-videos col-md-12">
    <h2>Videos</h2>
      <hr>
      <% @videos.each do |video| %>
        <%= video_tag(video.video.url, controls: true) %>
      <% end %>
  </div>
  <div class="tagged-milestones col-md-12">
    <h2>Milestones</h2>
    <hr>
      <% @milestones.each do |milestone| %>
        <div class="milestone-show">
          <p><strong><%= milestone.date.to_s(:long) %></strong></p>
          <p><%= milestone.post %></p>
        </div>
      <% end %>
  </div>
</div>
